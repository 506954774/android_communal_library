<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/fl_home_page"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/dotLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/v_dot1"
                    android:layout_width="7.5dp"
                    android:layout_height="7.5dp" />

                <View
                    android:id="@+id/v_dot2"
                    android:layout_width="7.5dp"
                    android:layout_height="7.5dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#70000000"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tv_bottomNavAdvDesc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="left|center_vertical"
            android:maxLength="15"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/tv_bottomNavDescPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="right|center_vertical"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="#cf4a4a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bottomNavDescDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="right|center_vertical"
            android:maxLength="15"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#3db3a7"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/produc_adv_recommend_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
         />

</RelativeLayout>