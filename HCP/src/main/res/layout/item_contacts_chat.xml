<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_chat_usericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/commen_With_Height10"
            android:src="@mipmap/ic_ex_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_chat_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="河北双维集团有限公司"
                android:textColor="@color/textBlack" />

            <TextView
                android:id="@+id/item_chat_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commen_With_Height5"
                android:text="项目计划书明日发动到您邮箱"
                android:textColor="@color/item_text_content"
                android:textSize="@dimen/commen_textSize12" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:text="18:01" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:background="#EFEFEF" />

</LinearLayout>